<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="525" Width="350">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label x:Name="resultLabel"
               Content="0"
               Grid.ColumnSpan="4"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Right"
               FontSize="60"/>

        <Button x:Name="acButton"
                Style="{StaticResource BaseButtonsStyle}"
                Grid.Row="1"
                Content="AC"/>

        <Button x:Name="negativeButton"
                Style="{StaticResource BaseButtonsStyle}"
                Grid.Row="1"
                Grid.Column="1"
                Content="+/-"/>

        <Button x:Name="percentageButton"
                Style="{StaticResource BaseButtonsStyle}"
                Grid.Row="1"
                Grid.Column="2"
                Content="%"/>

        <Button x:Name="divisionButton"
                Click="OperationButtons_Click"
                Style="{StaticResource OperatorButtons}"
                Grid.Row="1"
                Grid.Column="3"
                Content="/"/>

        <Button x:Name="sevenButton"
                Click="NumberButtons_Click"
                Style="{StaticResource NumberButtons}"
                Grid.Row="2"
                Content="7"/>

        <Button x:Name="eightButton"
                Click="NumberButtons_Click"
                Style="{StaticResource NumberButtons}"
                Grid.Row="2"
                Grid.Column="1"
                Content="8"/>

        <Button x:Name="nineButton"
                Click="NumberButtons_Click"
                Style="{StaticResource NumberButtons}"
                Grid.Row="2"
                Grid.Column="2"
                Content="9"/>

        <Button x:Name="multiplyButton"
                Click="OperationButtons_Click"
                Style="{StaticResource OperatorButtons}"
                Grid.Row="2"
                Grid.Column="3"
                Content="*"/>

        <Button x:Name="fourButton"
                Click="NumberButtons_Click"
                Style="{StaticResource NumberButtons}"
                Grid.Row="3"
                Content="4"/>

        <Button x:Name="fiveButton"
                Click="NumberButtons_Click"
                Style="{StaticResource NumberButtons}"
                Grid.Row="3"
                Grid.Column="1"
                Content="5"/>

        <Button x:Name="sixButton"
                Click="NumberButtons_Click"
                Style="{StaticResource NumberButtons}"
                Grid.Row="3"
                Grid.Column="2"
                Content="6"/>

        <Button x:Name="minusButton"
                Click="OperationButtons_Click"
                Style="{StaticResource OperatorButtons}"
                Grid.Row="3"
                Grid.Column="3"
                Content="-"/>

        <Button x:Name="oneButton"
                Click="NumberButtons_Click"
                Style="{StaticResource NumberButtons}"
                Grid.Row="4"
                Content="1"/>

        <Button x:Name="twoButton"
                Click="NumberButtons_Click"
                Style="{StaticResource NumberButtons}"
                Grid.Row="4"
                Grid.Column="1"
                Content="2"/>

        <Button x:Name="threeButton"
                Click="NumberButtons_Click"
                Style="{StaticResource NumberButtons}"
                Grid.Row="4"
                Grid.Column="2"
                Content="3"/>

        <Button x:Name="plusButton"
                Click="OperationButtons_Click"
                Style="{StaticResource OperatorButtons}"
                Grid.Row="4"
                Grid.Column="3"
                Content="+"/>

        <Button x:Name="zeroButton"
                Click="NumberButtons_Click"
                Style="{StaticResource NumberButtons}"
                Grid.Row="5"
                Content="0"
                Grid.ColumnSpan="2"/>

        <Button x:Name="pointButton"
                Style="{StaticResource NumberButtons}"
                Grid.Row="5"
                Grid.Column="2"
                Content=","/>

        <Button x:Name="equalsButton"
                Style="{StaticResource OperatorButtons}"
                Grid.Row="5"
                Grid.Column="3"
                Content="="/>

    </Grid>
</Window>